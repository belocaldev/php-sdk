{
    "name": "belocal/sdk",
    "type": "library",
    "description": "PHP library for text translation via API",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BeLocal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BeLocal\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "bobredobre",
            "email": "bobredobre@belocal.dev"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml"
    }
}
